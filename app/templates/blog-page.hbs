<div class="jumbotron">
  <h1>{{model.title}}</h1>
  <h3>{{model.group}}</h3>
  <h3><a src={{model.article.url}} target="_blank">about article: {{model.article.title}}</a></h3>
<div class="row">
  <div class="col-sm-4">
    <img src={{model.article.img_link}} alt={{model.article.title}}>
  </div>
  <!-- left col -->
  <div class="col-sm-8">
    <p>
      {{model.body}}
    </p>
    <div class="clip-footer">
      <div class="row">
        <div class="col-md-6">
          <p class="clip-author"><span>By</span> {{model.author}}</p>
        </div>
        <div class="col-md-6">
          <time id="ember1852" title="March 21, 2017" class="clip-default__published ember-view friendly-date">
          </time>
        </div>
      </div>
    </div>
    <!-- clip footer -->
    <button {{action 'delete' model}}>Delete</button>
    {{update-blog blogPost=model updateBlog='updateBlog'}}
  </div>
  <!-- right col -->
</div>
<!-- row -->
</div>
<!-- jumbotron -->
