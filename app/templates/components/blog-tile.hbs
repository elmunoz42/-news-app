<div class="well">
  <div class="row">
    {{#link-to 'blog-page' blogPost.id}}
      <div class="col-md-6">
          <img src={{blogPost.img_link}} alt={{blogPost.title}}>
        <!-- img -->
      </div>
      <!-- left col -->
      <div class="col-md-6">
        <h3>{{blogPost.title}}</h3>
        <p>{{blogPost.body}}</p>
          <div class="blogPost-footer">
            <div class="row">
              <div class="col-md-6">
                <p class="blogPost-author"><span>By</span> {{blogPost.author}}</p>
              </div>
              <div class="col-md-6">
                <time id="ember1852" title="March 21, 2017" class="blogPost-default__published ember-view friendly-date">
                </time>
              </div>
            </div>
          </div>
          <!-- blogPost footer -->
        </div>
        <!-- right col -->
      {{/link-to}}
    </div>
    <!-- row -->
  </div>
